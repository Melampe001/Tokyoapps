# Tokyo Roulette App - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==================== Firebase Configuration ====================
# Get these values from Firebase Console > Project Settings
FIREBASE_ANDROID_API_KEY=YOUR_ANDROID_API_KEY_HERE
FIREBASE_ANDROID_APP_ID=1:YOUR_APP_ID:android:YOUR_ANDROID_APP_ID_HERE
FIREBASE_IOS_API_KEY=YOUR_IOS_API_KEY_HERE
FIREBASE_IOS_APP_ID=1:YOUR_APP_ID:ios:YOUR_IOS_APP_ID_HERE
FIREBASE_MESSAGING_SENDER_ID=YOUR_MESSAGING_SENDER_ID_HERE
FIREBASE_PROJECT_ID=your-project-id-here
FIREBASE_STORAGE_BUCKET=your-project-id-here.appspot.com
FIREBASE_IOS_BUNDLE_ID=com.tokyo.rouletteApp

# ==================== Stripe Configuration ====================
# Get these from Stripe Dashboard > Developers > API Keys
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_YOUR_TEST_KEY_HERE
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_YOUR_LIVE_KEY_HERE
STRIPE_SECRET_KEY_TEST=sk_test_YOUR_TEST_SECRET_HERE
STRIPE_SECRET_KEY_LIVE=sk_live_YOUR_LIVE_SECRET_HERE

# Product IDs for in-app purchases
STRIPE_PRODUCT_ID_ADVANCED=price_advanced_plan_id_here
STRIPE_PRODUCT_ID_PREMIUM=price_premium_plan_id_here

# ==================== Google Play Console ====================
# In-app purchase product IDs (must match Google Play Console)
PLAY_STORE_PRODUCT_ID_ADVANCED=advanced_plan
PLAY_STORE_PRODUCT_ID_PREMIUM=premium_plan

# ==================== App Configuration ====================
# Environment: development, staging, production
APP_ENV=development

# Enable debug features
DEBUG_MODE=true

# API endpoints (if using custom backend for Stripe)
API_BASE_URL=https://your-backend-api.com/api/v1

# ==================== Optional Services ====================
# Sentry for crash reporting (optional)
SENTRY_DSN=https://your-sentry-dsn-here

# Analytics keys (optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ==================== Regional Configuration ====================
# Geo-blocking configuration
ENABLE_GEO_BLOCKING=false
ALLOWED_COUNTRIES=MX,US,CA

# ==================== Feature Flags ====================
# Enable/disable features for testing
ENABLE_CAMERA_OCR=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
